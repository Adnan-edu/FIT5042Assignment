  <persistence-unit name="Heritage-sharedPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>fit5042.heritage.repository.entities.Users</class>
    <class>fit5042.heritage.repository.entities.Heritagegroup</class>
    <class>fit5042.heritage.repository.entities.HeritageGroup</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Secured_DB"/>
